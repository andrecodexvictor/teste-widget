{
  "name": "kawaii-stream-widget",
  "version": "1.0.0",
  "description": "Kawaii Stream Goal Widget Desktop App",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "stream",
    "widget",
    "obs",
    "electron",
    "react"
  ],
  "author": "You",
  "license": "MIT",
  "dependencies": {
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.kawaiiwidget.app",
    "productName": "KawaiiWidget",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "build/**/*",
      "electron-main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}